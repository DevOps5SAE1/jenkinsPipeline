pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    
    tools {
        maven 'M2_HOME'
    }

    stages {
        stage('Build') {
           sh 'mvn --version'
        }

        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
