pipeline {
    agent any
    tools{
    maven 'M2_HOME'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    // Use the 'M2_HOME' Maven tool
                    def mvnHome = tool name: 'M2_HOME', type: 'hudson.tasks.Maven$MavenInstallation'
                    sh "${mvnHome}/bin/mvn -v"
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}  
