pipeline {
    agent any
    tools{
    maven 'M2_HOME'
    }

    stages {
        stage('Build') {
            steps {
                
                script {
                    def javaVersion = sh(script: 'java -version 2>&1 | head -n 1 | awk -F "\"" \'{print $2}\'', returnStatus: true).trim()
                    echo "JDK version: $javaVersion"
                }
            
            }
        }


        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}  
