spipeline {
    agent any
    tools{
    maven 'MAVEN'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    def mavenVersion = sh(script: 'mvn --version', returnStatus: true).trim()
                    if (mavenVersion.contains('Apache Maven')) {
                        echo "Maven version: $mavenVersion"
                    } else {
                        error "Maven not found"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}  
